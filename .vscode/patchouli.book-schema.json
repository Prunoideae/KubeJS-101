{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name displayed as the book title."
        },
        "landing_text": {
            "type": "string",
            "description": "The text displayed on the left page when opened."
        },
        "version": {
            "type": "integer",
            "description": "The edition of this book."
        }
    },
    "required": [
        "name",
        "landing_text",
        "version"
    ]
}